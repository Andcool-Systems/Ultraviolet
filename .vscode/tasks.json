{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Rust Project",
            "detail": "Run Rust application",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ],
            "runOptions": {
                "reevaluateOnRerun": true
            },
            "options": {
                "statusbar": {
                    "label": "$(debug-start) Run"
                }
            }
        },
        {
            "label": "Test",
            "detail": "Test Rust application",
            "type": "shell",
            "command": "cargo test --workspace",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [
                "$rustc"
            ],
            "runOptions": {
                "reevaluateOnRerun": true
            },
            "options": {
                "statusbar": {
                    "label": "$(beaker) Test"
                }
            }
        }
    ]
}